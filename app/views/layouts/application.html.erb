<!DOCTYPE html>
<html>
  <head>
    <title>Joseph Chilliams</title>
    <%= csrf_meta_tags %>
    <link rel="icon" href="starfavi.ico" type="image/x-icon"/>
    <link rel="shortcut icon" href="starfavi.ico" type="image/x-icon"/>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Shrikhand" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <meta name="description" content="No need to call me Joseph, call me bae."/>
  </head>

  <body>
  <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  <div class="wrapper">
    <% if current_user %>
      <div id="admin-corner">
        <a href="/admin">ADMIN PANEL</a><br>
        <a href="/logout">LOG OUT</a>
      </div>
    <% end %>
      <div id="header">
        <div >
          <a href="/"><%= image_tag('jctext', id: "logo") %></a>
        </div>
      </div>

      <div class="navigation">
        <ul>
          <li><a href="/shows">shows</a></li>
          <li><a href="/videos">videos</a></li>
          <li><a href="http://josephchilliams.bigcartel.com/">merch</a></li>
        </ul> 
      </div>

        
        <div id="background-wrap">
          <div class="x1">
              <div class="cloud"></div>
          </div>

          <div class="x2">
              <div class="cloud"></div>
          </div>

          <div class="x3">
              <div class="cloud"></div>
          </div>

          <div class="x4">
              <div class="cloud"></div>
          </div>

          <div class="x5">
              <div class="cloud"></div>
          </div>
        </div>
        <%= yield %>
    </div>

  <div class="footer" id="lab_social_icon_footer">
    <div class="container">
      <div class="text-center center-block">
        <a href="https://twitter.com/JosephChilliams" target="_blank"><i id="social-tw" class="fa fa-twitter fa-3x social"></i></a>
        <a href="https://soundcloud.com/joseph-chilliams" target="_blank"><i id="social-sc" class="fa fa-soundcloud fa-3x social"></i></a>
        <a href="https://www.youtube.com/channel/UCMDM_2kig7NyjkOvEkry3uQ" target="_blank"><i id="social-yt" class="fa fa-youtube-play fa-3x social"></i></a>
      </div>
    </div>
  </div>
    
  </div> <!-- wrapper -->

  <footer>
     <!-- <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"></script>
     <script src="js/jquery.fancybox.min.js"></script> -->
      <script>
       $(document).ready(function() {
         $('.fancybox').fancybox({
           padding   : 0,
           maxWidth  : '100%',
           maxHeight : '100%',
           width   : 560,
           height    : 315,
           autoSize  : true,
           closeClick  : true,
           openEffect  : 'elastic',
           closeEffect : 'elastic'
         });
       });
      </script>
  </footer>
  </body>
</html>
