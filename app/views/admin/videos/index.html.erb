<div class="row">
  <div class="col-md-10 col-md-offset-1 text-center">
    <h1>~<%= link_to "ADMIN", admin_path %>~</h1>
    <h3>all videos:</h3>
    <table class="table">
      <thead>
        <tr>
          <td>title</td>
          <td>youtube extension</td>
        </tr>
      </thead>
      </tr>
      <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.url %></td>
        <td><%= link_to "edit", "/admin/videos/#{video.id}/edit" %></td>
        <td><%= link_to "delete", "/admin/videos/#{video.id}", method: :delete %></td>
      </tr>
        
      <% end %>
    </table>
    <button class="btn btn-default"><%= link_to "New Video", "/admin/videos/new" %></button>
  </div>
</div>

